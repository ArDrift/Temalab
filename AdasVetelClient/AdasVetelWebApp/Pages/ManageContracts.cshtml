@page
@model ManageContractsModel
@{
    ViewData["Title"] = "Manage Contracts";
    ViewData["ReadContract"] = "Read Contract(s)";
    ViewData["ViewContracts"] = "View Contracts";
}
<h1>@ViewData["Title"]</h1>

<p>You will be able to manage your contracts here after logging in.<br/>
    This includes loading, viewing, updating and deleting them.</p>

<p>
    <a asp-action="ReadContract"><button class="btn btn-primary">@ViewData["ReadContract"]</button></a>
</p>

<p>
    <a asp-action="ViewContracts"><button class="btn btn-primary">@ViewData["ViewContracts"]</button></a>
</p>